{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "extends": [
        "google"
    ],
    "rules": {
        "require-jsdoc": 0,
        "indent": [
            2,
            2
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "quotes": [
            "error",
            "double"
        ]
    }
}